<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUserActivity">

    <EditText
        android:id="@+id/editTextAddUserUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textViewAddUsersername"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAddUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_phone"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextPhone"
        app:layout_constraintEnd_toEndOf="@+id/textViewAddUsersername" />

    <TextView
        android:id="@+id/textViewAddUsersername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:text="@string/user"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextAddUserUsername"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/editTextAddUserUsername"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextAddUserUsername"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddUserPassword" />

    <TextView
        android:id="@+id/textViewAddUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextAddUserPassword"
        app:layout_constraintEnd_toEndOf="@+id/textViewAddUsersername" />

    <EditText
        android:id="@+id/editTextAddUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextAddUserUsername"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextAddUserUsername"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddUserUsername" />

    <Button
        android:id="@+id/buttonAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/add_user"
        app:backgroundTint="#454545"
        app:layout_constraintEnd_toEndOf="@+id/editTextYear"
        app:layout_constraintStart_toStartOf="@+id/editTextPhone"
        app:layout_constraintTop_toBottomOf="@+id/editTextDay" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toEndOf="@+id/textViewAddUserAddress"
        app:layout_constraintTop_toTopOf="@+id/editTextAddUserUsername" />

    <EditText
        android:id="@+id/editTextDay"
        android:layout_width="54dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintEnd_toStartOf="@+id/editTextMonth"
        app:layout_constraintStart_toStartOf="@+id/editTextAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewMonth" />

    <TextView
        android:id="@+id/textViewYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year"
        app:layout_constraintEnd_toEndOf="@+id/editTextYear"
        app:layout_constraintStart_toStartOf="@+id/editTextYear"
        app:layout_constraintTop_toTopOf="@+id/textViewMonth" />

    <EditText
        android:id="@+id/editTextYear"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="@+id/editTextAddress"
        app:layout_constraintStart_toEndOf="@+id/editTextMonth"
        app:layout_constraintTop_toTopOf="@+id/editTextMonth" />

    <TextView
        android:id="@+id/textViewAddUserAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="@string/add_address"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextAddress"
        app:layout_constraintStart_toEndOf="@+id/editTextAddUserUsername" />

    <TextView
        android:id="@+id/textViewDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day"
        app:layout_constraintEnd_toEndOf="@+id/editTextDay"
        app:layout_constraintStart_toStartOf="@+id/editTextDay"
        app:layout_constraintTop_toTopOf="@+id/textViewMonth" />

    <EditText
        android:id="@+id/editTextMonth"
        android:layout_width="54dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintEnd_toStartOf="@+id/editTextYear"
        app:layout_constraintStart_toEndOf="@+id/editTextDay"
        app:layout_constraintTop_toTopOf="@+id/editTextDay" />

    <TextView
        android:id="@+id/textViewAddUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_id"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextEmployeeID"
        app:layout_constraintEnd_toEndOf="@+id/textViewAddUserAddress" />

    <TextView
        android:id="@+id/textViewMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/month"
        app:layout_constraintEnd_toStartOf="@+id/editTextYear"
        app:layout_constraintStart_toEndOf="@+id/editTextDay"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmployeeID" />

    <TextView
        android:id="@+id/textViewAddUserDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_dob"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDay"
        app:layout_constraintEnd_toEndOf="@+id/textViewAddUserID" />

    <EditText
        android:id="@+id/editTextEmployeeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />


</androidx.constraintlayout.widget.ConstraintLayout>