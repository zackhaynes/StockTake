<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteUsersActivity">

    <TextView
        android:id="@+id/textViewDeleteUserUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/user"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextDeleteUser"
        app:layout_constraintEnd_toStartOf="@+id/editTextDeleteUser" />

    <Button
        android:id="@+id/buttonDeleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/delete_user"
        app:backgroundTint="#454545"
        app:iconTint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/editTextDeleteUser"
        app:layout_constraintStart_toStartOf="@+id/editTextDeleteUser"
        app:layout_constraintTop_toBottomOf="@+id/editTextDeleteUser" />

    <EditText
        android:id="@+id/editTextDeleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeleteUserMessage" />

    <TextView
        android:id="@+id/textViewDeleteUserMessage"
        android:layout_width="257dp"
        android:layout_height="39dp"
        android:layout_marginTop="100dp"
        android:text="@string/delete_user_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>