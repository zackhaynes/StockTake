<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryManagementMenu">

    <Button
        android:id="@+id/buttonInventoryStatusActivity"
        android:layout_width="158dp"
        android:layout_height="70dp"
        android:text="@string/inventory_status"
        app:backgroundTint="#454545"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddItemActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddItemActivity"
        android:layout_width="158dp"
        android:layout_height="70dp"
        android:text="@string/add_item"
        app:backgroundTint="#454545"
        app:layout_constraintBottom_toTopOf="@+id/buttonClearItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInventoryStatusActivity" />

    <Button
        android:id="@+id/buttonClearItems"
        android:layout_width="158dp"
        android:layout_height="70dp"
        android:text="@string/clear_items"
        app:backgroundTint="#454545"
        app:layout_constraintBottom_toTopOf="@+id/buttonTestItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddItemActivity" />

    <Button
        android:id="@+id/buttonTestItems"
        android:layout_width="158dp"
        android:layout_height="70dp"
        android:text="@string/test_items"
        app:backgroundTint="#454545"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClearItems" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="116dp"
        android:layout_height="41dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:text="@string/logout"
        app:backgroundTint="#454545"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>